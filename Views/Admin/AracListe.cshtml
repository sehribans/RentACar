@model List<TBL_ARAC>
@{
    ViewData["Title"] = "MarkaForm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Araç Listesi</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0" style="overflow-x: auto;">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Araç Adı</th>
                            <th>Görsel</th>
                            <th>Vites Türü</th>
                            <th>Yakıt Türü</th>
                            <th>Km</th>
                            <th>Yıl</th>
                            <th>Koltuk Sayısı</th>
                            <th>Kira Ücreti</th>
                            <th>Konum</th>
                            <th>İşlemler</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.ARAC_AD</td>
                                <td>@item.GORSEL</td>
                                <td>@item.VİTES</td>
                                <td>@item.YAKIT</td>
                                <td>@item.KM</td>
                                <td>@item.YIL</td>
                                <td>@item.KOLTUK</td>
                                <td>@item.KİRA</td>
                                <td>@item.KONUM</td>
                            
                                <td>
                                    <a class="btn text-danger" onclick="Sil(@item.ID)"><i class="fa-duotone fa-trash"></i></a>
                                    <a href="/Admin/AracForm/@item.ID" class="btn text-primary"><i class="fa-duotone fa-pen-to-square"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<script>
    function Sil(id) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu işlem geri alınamaz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#00ff00',
            confirmButtonText: 'Evet,Sil!',
            cancelButtonText: 'İptal',
        }).then((result) => {
            if (result.isConfirmed) {
                url = "/Admin/AracSil/?id=" + id;
                window.location.href = url;
            }
        })
    }
</script>